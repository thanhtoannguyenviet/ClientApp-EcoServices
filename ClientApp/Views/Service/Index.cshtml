@using ClientApp.Models.DTO
@{
    ViewBag.Company = new CompanyServiceDTO();
    ViewBag.Title = Layout;
}


<div class="row container-fluid ">
    <table class="table table-hover ">
        <thead>
            <tr class="table-primary">
                <th>No.</th>
                <th>Id Company</th>
                <th>Id Service</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Description</th>
                <th>Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Model)
            {

                <tr>
                    <td>@item.companyServiceEntity.idCs</td>
                    <td>@item.companyServiceEntity.idCompany</td>
                    <td>@item.companyServiceEntity.idService</td>
                    <td>@item.companyServiceEntity.price</td>
                    <td>@item.companyServiceEntity.unit</td>
                    <td>@item.companyServiceEntity.description</td>
                    <td>@item.companyServiceEntity.nameCos</td>
                    @if (item.companyServiceEntity.status == "0")
                    {
                        <td>
                            @Ajax.ActionLink("Accept", "UpdateStatus", "Service", new { id = item.companyServiceEntity.idCs }, new AjaxOptions
                            {
                                HttpMethod = "GET",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "Content"
                            })

                        </td>

                    }
                    else if (item.companyServiceEntity.status == "1")
                    {
                        <td>
                            <a href="#" class="disabled" tabindex="-1" role="button" aria-disabled="true">Accepted</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
