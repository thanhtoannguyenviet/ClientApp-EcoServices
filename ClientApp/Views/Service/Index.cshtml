@model IEnumerable<ClientApp.Models.CompanyService>

<div class="row container-fluid ">
    <table class="table table-hover ">
        <thead>
            <tr class="table-primary">
                <th>No.</th>
                <th>Id Company</th>
                <th>Id Service</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Description</th>

                <th>Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.idCs</td>
                    <td>@item.idCompany</td>
                    <td>@item.idService</td>
                    <td>@item.price</td>
                    <td>@item.unit</td>
                    <td>@item.description</td>
                    <td>@item.nameCos</td>
                    @if (item.status == "0")
                    {
                        <td>
                            @Ajax.ActionLink("Accept", "UpdateStatus", "Service", new { id = item.idCs }, new AjaxOptions
                            {
                                HttpMethod = "GET",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "Content"
                            })

                        </td>

                    }
                    else if (item.status == "1")
                    {
                        <td>
                            <a href="#" class="disabled" tabindex="-1" role="button" aria-disabled="true">Accepted</a>
                        </td>
                    }
                </tr>
                }
        </tbody>
    </table>
</div>
