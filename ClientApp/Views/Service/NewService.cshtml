@model ClientApp.Models.Service

@{
    ViewBag.Title = "NewService";
}
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Service
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("NewService", "Service", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Name Service</label>
                            @Html.TextBoxFor(m => m.nameservice, new { @class = "form-control", @placeholder = "nameservice" })
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextBoxFor(m => m.description, new { @class = "form-control", @placeholder = "description" })
                        </div>
                        <div class="form-group">
                            <label>Actived</label>
                            @Html.TextBoxFor(m => m.actived, new { @class = "form-control", @placeholder = "actived" })
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" name="submit" value="Add" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "getAllByAdmin")
</div>
